<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="DVRS/DVRS.xml"></include>
	
	<constant name="" value=""></constant>
	
	<package name="default" extends="struts-default">
     
      
      <action name="index" class="main.common.action.IndexAction" method="index">
            <result name="success">/WEB-INF/web/login.jsp</result>
      </action>  
      
      
      
   </package>
   <package name="tiles" extends="tiles-default">
		<action name="" class="IndexAction" method="index">
            <result name="success" type="tiles">login</result>
		</action>
		<action name="login" class="main.common.action.LoginAction" method="login">
            <result name="success" type="tiles">systemMenu</result>
		</action>
		
		<action name="*SystemLink" class="main.common.action.SystemLinkAction" method="{1}" >
			<result name="DVRS" type="tiles">DVRS_welcome</result>
		</action>
	</package>
</struts>