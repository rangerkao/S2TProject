<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="DVRS-default" extends="struts-default">
		
	</package>
	<package name="DVRS-tiles" extends="tiles-default">
		<action name="*Link" method="{1}" class="main.DVRS.action.LinkAction">
			<result name="{1}" type="tiles">DVRS_{1}</result>
		</action>
	</package>
	<package name="DVRS-ajax" extends="json-default">
		<global-results>
			<result type="json" name="success"><param name="root">result</param></result>
			<result type="json" name="needLogin"><param name="root">needLogin</param></result>
		</global-results>
		<action name="queryAdmin" class="main.DVRS.action.AdminAction" method="queryAdmin" />
        <action name="queryDataRate" class="main.DVRS.action.DataRateAction" method="queryDataRate" />
        <action name="queryCurrentDay" class="main.DVRS.action.CurrentAction" method="queryCurrentDay" />
        <action name="queryCurrentMonth" class="main.DVRS.action.CurrentAction" method="queryCurrentMonth" />
        <action name="queryCardChangeHistory" class="main.DVRS.action.HistoryAction" method="queryCardChangeHistory" />
        <action name="queryNumberChangeHistory" class="main.DVRS.action.HistoryAction" method="queryNumberChangeHistory" />
	    
        <action name="querySms" class="main.DVRS.action.SmsAction" method="querySms" >
	        <result type="json">
	        	<param name="root">result</param>
	        </result>
        </action>
	</package>
</struts>